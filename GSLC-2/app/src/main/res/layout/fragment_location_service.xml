<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LocationServiceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target Location"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etLat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Latitude (Contoh: -6.200000)"
            android:inputType="numberDecimal|numberSigned" />

        <EditText
            android:id="@+id/etLong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Longitude (Contoh: 106.816666)"
            android:inputType="numberDecimal|numberSigned" />

        <Button
            android:id="@+id/btnStartTracking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mulai Hitung Jarak" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Jarak: Menunggu GPS..."
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"/>

    </LinearLayout>

</FrameLayout>